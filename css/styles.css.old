html,
body {
	margin:0;
	padding:0;
	max-height:100%;
}
#wrapper {
	min-height:100%;
	position:relative;
}

#content {
	padding-bottom: 250px; /* Height of the footer element */
}
#footer {
	background-color: tan;
	width:100%;
	height:auto;
	position:absolute;
	bottom:0;
	left:0;
}

#death {
  display: none;
  background-color: black;
  color: red;
  min-height: 100vh;
  text-align: center;
  font-size: 8em;
  line-height: 3em;
}

#idol {
  max-height: 50px;
}

#notices,
#descriptions {
  margin-bottom: 15px;
}

.col-md-1,
.col-md-2,
.col-md-3 {
  display: inline-block;
  width: 40px;
}

/*#footer {
  background-color: tan;
  position: absolute;
}*/

.gems {
  margin: 0 2.5px;
}

#description img {
  display: inline-block;
  width: 0 auto;
  max-height: 25%;
  -webkit-box-shadow: 10px 10px 35px -7px rgba(148,120,64,1);
  -moz-box-shadow: 10px 10px 35px -7px rgba(148,120,64,1);
  box-shadow: 10px 10px 35px -7px rgba(148,120,64,1);
}

